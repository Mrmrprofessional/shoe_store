<html>
<head>
    <title>Shoes</title>

<body>
    <h1>{{ store.getName }}</h1>

    {% if brands is not empty %}
        <p>Here are the brands that this store has:</p>
        <ul>
            {% for brand in brands %}
                    <li>{{ brand.getBrand }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a brand to this store:</h4>

    <form action='/add_brand' method='post'>
        <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
        <label for="brand_id">Select a brand</label>
        <select id='brand_id' name='brand_id' type='text'>
          {% for brand in all_brands %}
            <option value="{{ brand.getId }}"> {{ brand.getBrand }} </option>
          {% endfor %}
        </select>
        <button type='submit'>Add brand</button>
    </form>
    <h3>Update Store Name</h3>
    <form action="/update_store" method="post">
        <input name="_method" type="hidden" value="patch">
        <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
        <input id="name" name="name" type="text">
        <button class="btn-warning" type="submit">Update</button>
    </form>
    <form action='/delete_store' method='post'>
        <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
        <button type='submit'>Delete this store</button>
    </form>
    <p><a href='/'>Home</a></p>
</body>
</html>
